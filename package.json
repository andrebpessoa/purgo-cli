{
	"name": "purgo-cli",
	"version": "1.0.3",
	"description": "A modern CLI tool for cleaning build artifacts, dependencies, and caches from JavaScript/TypeScript projects.",
	"author": "Andr√© Pessoa <andrebpessoa09@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/andrebpessoa/purgo-cli.git"
	},
	"keywords": [
		"cli",
		"cleaner",
		"node_modules",
		"typescript",
		"bun",
		"build-tool",
		"cache",
		"cleanup",
		"artifacts",
		"dependencies",
		"nextjs",
		"react",
		"vite",
		"monorepo"
	],
	"files": [
		"dist",
		"schema"
	],
	"bin": {
		"purgo-cli": "dist/cli.js"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsup src/index.ts src/cli.ts src/utils.ts src/ui.ts src/hooks.ts src/cache.ts --format cjs,esm --dts --clean",
		"dev": "tsup src/index.ts src/cli.ts src/utils.ts src/ui.ts src/hooks.ts src/cache.ts --format cjs,esm --dts --watch",
		"prepublishOnly": "bun run build",
		"test": "bun test",
		"lint": "bunx biome check --write --unsafe",
		"check": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@types/bun": "^1.3.0",
		"@types/glob": "^9.0.0",
		"@types/node": "^24.7.2",
		"@types/prompts": "^2.4.9",
		"tsup": "^8.5.0"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"arktype": "^2.1.23",
		"boxen": "^8.0.1",
		"chalk": "^5.6.2",
		"commander": "^14.0.1",
		"cosmiconfig": "^9.0.0",
		"execa": "^9.6.0",
		"get-folder-size": "^5.0.0",
		"glob": "^11.0.3",
		"ora": "^9.0.0",
		"pretty-bytes": "^7.1.0",
		"prompts": "^2.4.2"
	}
}
