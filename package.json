{
  "name": "purgo",
  "version": "1.0.0",
  "description": "A modern CLI tool for cleaning build artifacts, dependencies, and caches from JavaScript/TypeScript projects.",
  "author": "Andr√© Pessoa <andrebpessoa09@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrebpessoa/purgo.git"
  },
  "keywords": [
    "cli",
    "cleaner",
    "node_modules",
    "typescript",
    "bun",
    "build-tool",
    "cache",
    "cleanup",
    "artifacts",
    "dependencies",
    "nextjs",
    "react",
    "vite",
    "monorepo"
  ],
  "files": [
    "dist",
    "schema"
  ],
  "bin": {
    "purgo": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts src/utils.ts src/ui.ts src/hooks.ts src/cache.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/cli.ts src/utils.ts src/ui.ts src/hooks.ts src/cache.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "lint": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/glob": "^9.0.0",
    "@types/node": "^24.7.2",
    "tsup": "^8.5.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/prompts": "^2.4.9",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "cosmiconfig": "^9.0.0",
    "execa": "^9.6.0",
    "get-folder-size": "^5.0.0",
    "glob": "^11.0.3",
    "ora": "^9.0.0",
    "pretty-bytes": "^7.1.0",
    "prompts": "^2.4.2",
    "zod": "^4.1.12"
  }
}